<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">
<!--    <fade android:duration="2000"/>-->
<!--    Si queremos especificar la animación puntual de un elemento.-->
    <fade
        android:duration="4000"
        android:fadingMode="fade_in_out">

        <targets>
            <target android:targetId="@+id/btnVolver" />
            <target android:targetId="@+id/btnSiguiente"/>
        </targets>
    </fade>

<!--    Para la animación general de la ventana-->
    <changeBounds
        android:duration="2000"
        android:interpolator="@android:anim/bounce_interpolator">
    </changeBounds>
</transitionSet>